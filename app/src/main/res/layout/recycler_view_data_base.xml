<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4mm"
        android:layout_marginBottom="2mm"
        android:paddingLeft="15dp"
        android:paddingRight="28dp"
        android:paddingVertical="1mm">
        <EditText
            android:id="@+id/searchEditText"
            android:paddingVertical="2mm"
            android:paddingHorizontal="4mm"
            android:layout_width="48mm"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:textSize="18dp"
            android:textStyle="bold"
            android:inputType="number"
            android:textColorHint="@color/gray_1"
            android:background="@drawable/custom_input_add_data"/>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="end">
          <ImageView
              android:id="@+id/searchButton"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/search_icon"
              android:paddingVertical="7dp"
              android:paddingHorizontal="2mm"
              android:background="@drawable/submit_instance_button_bg"/>
      </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="367dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/gray_2"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4mm"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5mm"/>
</LinearLayout>